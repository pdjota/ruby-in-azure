<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-body text-center">
          <h1 class="card-title display-4 mb-4">
            <%= logged_in? ? "Welcome, #{current_user.email}!" : "Welcome to Stock Management" %>
          </h1>
          
          <p class="card-text lead mb-4">
            <%= logged_in? ? 
                "Manage your inventory, products, and stores with ease." : 
                "Please log in to access the stock management system." %>
          </p>
          
          <% if logged_in? %>
            <div class="d-grid gap-2 d-md-flex justify-content-md-center">
              <%= link_to "View Products", "#", class: "btn btn-primary btn-lg me-md-2" %>
              <%= link_to "Manage Stores", "#", class: "btn btn-outline-primary btn-lg me-md-2" %>
              <%= link_to "Check Inventory", "#", class: "btn btn-outline-primary btn-lg" %>
            </div>
          <% else %>
            <div class="d-grid gap-2 d-md-flex justify-content-md-center">
              <%= link_to "Login", login_path, class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
